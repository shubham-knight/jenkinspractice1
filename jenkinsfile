        stage('Compile and Clean'){
            steps{
                script{
                       try{
                            bat "npm run clean"
                       }
                       catch(all){
                            echo "Compile and clean stage Failed"
                       }
                }
            }
        }

        stage('Test'){
                    steps{
                        script{
                               try{
                                    bat 'npm test'
                               }
                               catch(all){
                                    echo "Test stage Failed"
                               }
                        }
                    }
                }

        stage('Build'){
                    steps{
                        script{
                               try{
                                    bat 'npm build'
                               }
                               catch(all){
                                    echo "Build stage Failed. War file not created"
                               }
                        }
                    }
                }
        stage('Verify'){
            steps{
                script{
                       try{
                            bat "npm verify"
                       }
                       catch(all){
                            echo "Verify stage Failed"
                       }
                }
            }
        }

        stage('Install'){
            steps{
                script{
                       try{
                            bat "npm install"
                       }
                       catch(all){
                            echo "Install stage Failed"
                       }
                }
            }
        }


        stage('SonarQube Report'){
            steps{
                withSonarQubeEnv(installationName: 'SonarQube'){
                    bat 'npm run sonar:sonar'
                }
            }
